{{! Login/Signup page }}
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2>Signup</h2>
      <form class="form signup-form">
        <div class="form-group mb-2">
          <label for="name-signup">Name:</label>
          <input class="form-control" type="text" id="name-signup" placeholder="Enter name"/>
        </div>
        <div class="form-group mb-2">
          <label for="email-signup">Email:</label>
          <input class="form-control" type="text" id="email-signup" placeholder="Enter email"/>
        </div>
        <div class="form-group mb-2">
          <label for="password-signup">Password:</label>
          <input class="form-control" type="password" id="password-signup" placeholder="Enter password"/>
        </div>
        <div class="form-group">
          <button class="btn btn-dark" type="submit">Signup</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="./js/signup.js"></script>